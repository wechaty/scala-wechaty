<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
<!--        <layout class="ch.qos.logback.classic.PatternLayout">-->
        <encoder>
            <pattern>
                %d{MM-dd HH:mm:ss} %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </pattern>
        </encoder>
    </appender>

    <logger name="jetbrains.exodus" level="WARN"/>
    <logger name="org.eclipse.jetty" level="ERROR"/>
    <logger name="com.google.common.util.concurrent.Futures.CombinedFuture" level="OFF"/>
    <logger name="oshi" level="ERROR"/>
    <logger name="org.springframework.jdbc.core" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="Console" />
    </root>
    <logger name="xcoin" level="debug" additivity="false">
        <appender-ref ref="Console" />
    </logger>

</configuration>